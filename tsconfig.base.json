{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsxImportSource": "@emotion/react",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strict": true,

        "lib": ["es2017", "DOM"],                   // Set of bundled library declaration files that describe the target runtime environment
        "target": "es2016",                         // Set the Javascript language version and include compatible library declarations
        "jsx": "react-jsx",                         // Specify what JSX code is generated

        "module": "esnext",                         // Specify what module code is generated
        "moduleResolution": "node",                 // Compiler (Typescript) figures out what an import refers to
        "baseUrl": ".",                             // Set a base directory to resolve non-absolute module names (https://www.typescriptlang.org/tsconfig#baseUrl)
        "paths": {
            "@edene/animations": ["libs/animations/src/index.ts"],
            "@edene/components": ["libs/components/src/index.ts"],
            "@edene/foundations": ["libs/foundations/src/index.ts"],
            "@edene/hooks": ["libs/hooks/src/index.ts"],
            "@edene/utils": ["libs/utils/src/index.ts"]
        }                                           // Set of entries that re-map imports to additional lookup locations
    },
    "exclude": ["node_modules", "tmp"]
}
